@model PollingSystem.Models.Election

@{
    ViewBag.Title = "Edit";
}
@{ 
    string status;
    if(Model.hasEnded == 0)
    {
        status = "Ongoing";
    }
    else
    {
        status = "Complete";
    }
}
<h2>Edit Details for @status Election @Model.pollName ( @Model.pollCode )</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Modify Details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.pollCode)

    <div class="form-group">
        @Html.LabelFor(model => model.pollName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.pollName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pollName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.hostName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.hostName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.hostName, "", new { @class = "text-danger" })
        </div>
    </div>

    





    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Add Participant", "AddCandy","Elections", new { id = Model.pollCode }, new { @class = "myButton" })
        </div>
    </div>
    
</div>
}

<div>
    @Html.ActionLink("Back to All Election List", "Index","Elections") |
    
</div>
<style>
    .myButton{
        color:white;
        background-color:red;
        padding:12px;
        margin:25px;
    
</style>