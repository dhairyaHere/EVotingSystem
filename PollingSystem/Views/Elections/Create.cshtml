@model PollingSystem.Models.Election

@{
    ViewBag.Title = "Create";
}

<h2>Host new Election</h2><br>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enter all the necessary details</h4>
